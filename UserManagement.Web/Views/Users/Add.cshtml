@model UserManagement.Models.User;
@Html.ValidationSummary(excludePropertyErrors: true, message: "Please fix the errors below", htmlAttributes: new { @class = "text-danger" })

<h2>Add User</h2>

<form asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="Forename"></label>
        <input asp-for="Forename" required />
        <span asp-validation-for="Forename" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" required />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" required/>
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="IsActive"></label>
        <input asp-for="IsActive" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">
        Add
    </button>
    <a asp-action="List" class="btn btn-primary bg-danger">
        Cancel
    </a>
</form>