@model UserManagement.Web.Models.Logs.LogListViewModel;

<h2>Logs</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th>Target User Id</th>
                <th>Details</th>
                <th>Timestamp</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Action
                    </td>
                    <td>
                        @item.TargetUserId
                    </td>
                    <td>
                        @item.Details
                    </td>
                    <td>
                        @item.Timestamp
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>